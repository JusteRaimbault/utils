

;;;;;;;;;;;;;;
;; Logging utils
;;;;;;;;;;;;;;


;;
;; add to global : log-level
;;

;; for now simple output log.
;; TODO : file log, etc


to setup-log [level]
  set log-level level
end



;;
; by default DEBUG level if not set
to log-debug [msg]
  if log-level = "DEBUG" or log-level = 0 [
    output-print msg
  ]
end